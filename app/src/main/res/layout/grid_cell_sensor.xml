<?xml version="1.0" encoding="utf-8"?>
<com.selcukcihan.android.sensors.GridCellView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_light"
    android:padding="5sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/sensor_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@mipmap/accelerometer"
            tools:ignore="Suspicious0dp">
        </ImageView>
        <TextView
            android:id="@+id/sensor_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="TEXT HERE"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            tools:ignore="Suspicious0dp">
        </TextView>
    </LinearLayout>
</com.selcukcihan.android.sensors.GridCellView>